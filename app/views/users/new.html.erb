<h2 class="title-main">Регистрация пользоватлея</h2>
<div class="form">
  <%= form_with model: @user do |f|%>
    <%# Имя %>
    <div class="form-main">
      <%# Почта %>
      <div class="form-group">
        <%= f.label :email, "Почта<span class='required'>*</span>".html_safe, class: "form-lable" %>
        <%= f.text_field :email, class: "form-text_field" %>
        <div class="error-message" id="email-error" style="display: none;"></div>
      </div>
      <%# Пароль %>
      <div class="form-group">
        <%= f.label :password, "Пароль<span class='required'>*</span>".html_safe, class: "form-lable" %>
        <%= f.password_field :password, class: "form-password_field", id: "password-input" %>
        <div class="password-visibility">
          <span id="last-char"></span>
        </div>
        <div class="error-message" id="email-error" style="display: none;"></div>
      </div>
      <%# Имя %>
      <div class="form-group">
        <%= f.label :name, "Имя<span class='required'>*</span>".html_safe, class: "form-lable" %>
        <%= f.text_field :name, class: "form-text_field" %>
        <div class="error-message" id="email-error" style="display: none;"></div>
      </div>
      <%# Фамилия %>
      <div class="form-group">
        <%= f.label :last_name, "Фамилия", class: "form-lable" %>
        <%= f.text_field :last_name, class: "form-text_field" %>
        <div class="error-message" id="email-error" style="display: none;"></div>
      </div>
      <%# Возраст %>
      <div class="form-group">
        <%= f.label :age, "Возраст<span class='required'>*</span>".html_safe, class: "form-lable" %>
        <%= f.text_field :age, class: "form-text_field" %>
        <div class="error-message" id="email-error" style="display: none;"></div>
      </div>
      <%# Кнопка регистрации %>
      <%= f.submit "Регистрация", class: "form-submit"%>
    </div>
  <% end %>
</div>
