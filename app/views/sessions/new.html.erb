<div class="block">
  <h2 class="title-main">Вход пользователя</h2>
  <div class="form">
    <%= form_with url: session_path do |f|%>
      <%# Имя %>
      <div class="form-main">
        <%# Почта %>
        <div class="form-group">
          <%= f.label :email, "Почта", class: "form-lable" %>
          <%= f.text_field :email, class: "form-text_field" %>
        </div>
        <%# Пароль %>
        <div class="form-group">
          <%= f.label :password, "Пароль", class: "form-lable" %>
          <%= f.password_field :password, class: "form-password_field", id: "password-input" %>
          <div class="password-visibility">
            <span id="last-char"></span>
          </div>
        </div>
        <!--<div class="form-group">
          <%= f.check_box :remember_me, name: "remember_me", value: 1%>
          <%= f.label :remember_me, "Запомнить меня", class: "form-label" %>
        </div> закоментированно потому что нету реализации -->
        <%= f.submit "Вход", class: "form-submit"%>
      </div>
    <% end %>
  </div>
</div>
